<?xml version="1.0"?>
<ruleset name="Project Rules">
    <description>Custom coding standards for the project</description>
    <rule ref="PSR12"/>

    <!-- Specify file extensions to check -->
    <fileExtensions>
        <extension>php</extension>
    </fileExtensions>

    <!-- Exclude directories -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Include paths -->

    <file>./src</file>
    <file>./tests</file>

    <!-- Reports -->
    <arg name="report" value="full"/>
    <arg name="report-file" value="phpcs-report.txt"/>
</ruleset>
